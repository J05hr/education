<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shortcut_drawerlayout"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ShortcutActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/shortcut_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:title="@string/shortcut_text"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/menu"
            android:background="@color/colorPrimary"
            android:layout_margin="0dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shortcut_user_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@id/shortcut_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:layout_margin="0dp"
            app:cornerRadius="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:backgroundTint="?android:attr/colorBackground"
            app:icon="@drawable/account_sm_gray"
            style="@style/SettingButtons"
            android:text="@string/users_text" />
        <View
            android:id="@+id/shortcut_user_button_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayBorder"
            app:layout_constraintTop_toBottomOf="@id/shortcut_user_button" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/shortcut_categories_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:textSize="18sp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:textColor="@color/grayText"
            app:layout_constraintTop_toBottomOf="@id/shortcut_user_button_border"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="0dp"
            app:cornerRadius="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textAllCaps="false"
            android:textAlignment="textStart"
            android:backgroundTint="?android:attr/colorBackground"
            app:icon="@drawable/category"
            style="@style/SettingButtons"
            android:text="@string/categories_text" />
        <View
            android:id="@+id/shortcut_categories_button_border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayBorder"
            app:layout_constraintTop_toBottomOf="@id/shortcut_categories_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/shortcut_navdrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navdrawer_header"
        app:itemTextAppearance="@style/navdrawer_style"
        app:itemTextColor="@color/grayText" />
</androidx.drawerlayout.widget.DrawerLayout>
